@model List<GestionStock.Core.Entities.Venta>;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h1>LISTA DE VENTAS</h1>
        <a asp-controller="Venta" asp-action="NuevaVenta" class="btn btn-primary mb-3">NUEVA VENTA</a>
        <table class="table table-bordered">
            <thead>
                <tr>

                    <th>Fecha de venta</th>
                    <th>Id Venta</th>
                    <th>Id producto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vent in Model)
                {
                    <tr>

                        <td>@vent.fecha </td>
                        <td>@vent.ventaId</td>
                        <td>@vent.productoId</td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
