@model GestionStock.Core.Entities.Producto;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>AÑADIR NUEVO PRODUCTO</h2>
        <form asp-controller="Producto" asp-action="NuevoProducto" method="post">
            
            <div class="mb-3">
                <label> Nombre </label>
                <input class="form-control" asp-for="nombre" type="text" />
            </div>
            <div class="mb-3">
                <label> categoria </label>
                <input class="form-control" asp-for="categoriaId" type="text" />
                <div class="mb-3">
                    <label> Habilitado </label>
                    <input class="form-control" asp-for="habilitado" type="text" />

            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Producto" asp-action="ListaProductos" class="btn btn-primary">Volver</a>
            </div>

        </form>
    </div>
</div>
